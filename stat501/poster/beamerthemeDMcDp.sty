\RequirePackage{mycolors}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=white,bg=green0}
\setbeamercolor{footline}{fg=white, bg=green0}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=greenp2}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}

\setbeamercolor{framesubtitle}{fg=white, bg=green0}
\setbeamercolor{author in head/foot}{fg=white, bg=green0}
\setbeamercolor{title in head/foot}{fg=white, bg=green0}

\setbeamercolor*{normal text}{bg=white, fg=black}
\setbeamercolor*{block body}{bg=cmulightgray, fg = black}
\setbeamercolor*{block title}{fg=white,bg=blue0}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=white}

\setbeamercolor*{example body}{fg=black,bg=cmulightgray}
\setbeamercolor*{example text}{fg=black,bg=cmulightgray}
\setbeamercolor*{example title}{bg=blue0,fg=white}

\setbeamercolor{block title alerted}{fg=white,bg=orange0}
\setbeamercolor{block body alerted}{bg=orangem2}
\setbeamercolor{itemize items}{blue0}

\setbeamercolor{structure}{fg=blue0}

%\setbeamertemplate{blocks}[default]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\useinnertheme{rectangles}
\usefonttheme{serif}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.025\paperwidth}
      \end{column}
      \begin{column}{.95\paperwidth}
        \vskip10ex
        
        \flushright{\usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}}
        \flushleft{\usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}}
        \flushleft{\usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}}     
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
  
  \leavevmode%
  \begin{beamercolorbox}[ht=4ex,leftskip=1em,rightskip=1em]{author in head/foot}%
    \url{http://www.stat.cmu.edu/~dhomrigh}
    \hfill
    \texttt{dhomrigh@stat.cmu.edu}
    \vskip1ex
  \end{beamercolorbox}
  \vskip0pt%
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

